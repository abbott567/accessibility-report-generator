{%- set lowRiskServices = data.thisMonth.pdu.getServices({ risk: 'low' }) -%}
{%- if (lowRiskServices.length > 0) -%}
  <ul>
    {%- for service in lowRiskServices -%}
      {%- if service.plans === 'true'-%}
        <li>{{service.name}}</li>
      {%- elif service.legacy === 'true' -%}
        <li class="disabled">{{service.name}} <span class="i">- (legacy)</span></li>
      {%- else -%}
        <li class="disabled">{{service.name}} <span class="i">- (no accessibility work scheduled)</span></li>
      {%- endif -%}
    {%- endfor -%}
  </ul>
{%- else -%}
  <p>You currently have no low risk services.</p>
{%- endif -%}