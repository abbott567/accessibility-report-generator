{
  "name": "accessibility-report-generator",
  "version": "3.0.0",
  "description": "A report generator to monitor accessibility compliance in large organisations.",
  "scripts": {
    "export:report": "node src/templates/report/export/run-tasks.js",
    "export:emails": "node src/templates/email/export/run-tasks.js",
    "export:excel": "node src/templates/excel/export/run-tasks.js",
    "export:data": "node src/templates/data/export/run-tasks.js",
    "export": "npm run export:report && npm run export:emails && npm run export:excel && npm run export:data",
    "build": "npm run export",
    "start": "npm run sass && node server.js",
    "coverage": "NODE_ENV=test nyc mocha",
    "sass": "node-sass --output-style compressed src/templates/report/assets/sass -o src/templates/report/assets/css",
    "test": "NODE_ENV=test mocha"
  },
  "engines": {
    "node": ">=14.0.0 <15.0.0"
  },
  "author": "Craig Abbott (@Abbott567)",
  "license": "ISC",
  "dependencies": {
    "cheerio": "^1.0.0-rc.10",
    "date-fns": "^2.25.0",
    "diff": "^5.0.0",
    "exceljs": "^4.3.0",
    "express": "^4.17.1",
    "findit2": "^2.2.3",
    "fs-jetpack": "^4.2.0",
    "govuk-frontend": "^3.14.0",
    "html-minifier": "^4.0.0",
    "js-better-fs": "^1.0.0",
    "node-sass": "^6.0.1",
    "nunjucks": "^3.2.3",
    "package-json-path": "^1.0.9",
    "percent-value": "^1.0.9",
    "require-dir": "^1.2.0",
    "serve-favicon": "^2.5.0",
    "sinon": "^12.0.1",
    "sinon-chai": "^3.7.0",
    "slugify": "^1.6.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "chai": "^4.3.4",
    "chai-subset": "^1.6.0",
    "clone-deep": "^4.0.1",
    "colors": "^1.4.0",
    "deep-diff": "^1.0.2",
    "deep-object-diff": "^1.1.7",
    "eslint": "^7.32.0",
    "json-diff": "^0.7.4",
    "madge": "^5.0.1",
    "mocha": "^9.1.2",
    "nyc": "^15.1.0",
    "standard": "^16.0.4"
  },
  "mocha": {
    "recursive": true,
    "timeout": "120000",
    "exit": true,
    "sort": true
  },
  "nyc": {
    "include": [
      "src**/*",
      "!src/data*"
    ],
    "all": true,
    "reporter": [
      "html",
      "text"
    ],
    "report-dir": "coverage"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": [
      "mocha"
    ],
    "ignore": [
      "**/html5shiv.js"
    ]
  }
}
